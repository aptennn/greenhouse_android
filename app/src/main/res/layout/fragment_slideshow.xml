<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_greenhouse"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_baseline_house_siding_24_blue_logo" />

    <TextView
        android:id="@+id/tv_green_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_greenhouse"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_green_house"
        android:text="by"
        android:textSize="30dp"
        android:id="@+id/by"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/by"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:id="@+id/fb_god_card">

        <ImageView
            android:id="@+id/fb_god"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/by"
            android:layout_alignParentRight="true"
            android:src="@drawable/fb_god_github_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aptennn"
            android:layout_gravity="center"
            android:text="Michael" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/by"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/aptennn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/aptennn_github_logo_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aptennn"
            android:layout_gravity="center"
            android:text="Egor" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/fb_god_card"
        android:background="@drawable/button_transparent"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_baseline_feedback_24" />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="50dp"
            android:text="@string/feedback" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>